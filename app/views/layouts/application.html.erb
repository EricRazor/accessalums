<!DOCTYPE html>
<html>
  <head>
    <title>AccessAlums</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Access Alums</a>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "Profile", student_path(current_student), class: 'nav-link' %>
            <!-- <a class="nav-link" href="">Portfolio</a> -->
          </li>
          <% end %>
          <li class="nav-item">
            <a class="nav-link" href="/pitches">Pitches</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/projects">Projects</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/students">Students</a>
          </li>
        </ul>
        <ul class="navbar-nav mr-right">
          <!-- conditional logic for current user and if they're logged in or not -->
          <!-- login and logout buttons here -->
          <!-- Welcome, current_user name -->
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "Welcome, #{current_student.name}", student_path(current_student), class: "nav-link" %>
            </li>
            <li class="nav-item">
            <%= link_to "Log out", logout_path, method: 'delete', class: "nav-link" %>
          </li>
          <% else %>
            <li><%= link_to "Log In", login_path, class: "nav-link" %></li>
            <li><%= link_to "Sign Up", new_student_path(@student), class: "nav-link" %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div id="yield_div">
      <%= yield %>
    </div>


  </body>
</html>
