<h1>Create a new student</h1>
<%= form_for @student do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "Biography" %>
  <%= f.text_area :bio %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.label "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign up" %>
<% end %>
