<h1>Edit</h1>
<%= form_for @student do |f| %>
  <%= f.label "Name" %>
  <%= f.text_field :name %>
  <%= f.label "Biography" %>
  <%= f.text_area :bio %>
  <%= f.label "Email" %>
  <%= f.text_field :email %>
  <%= f.label "Password" %>
  <%= f.password_field :password %>
  <%= f.label "Password Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit Edit" %>
<% end %>
<%= button_to "DESTROY #{@student.name}", student_path(@student), method: :delete, class: 'btn, btn-danger' %>
